echo " ----------databases------------- " >> workflow_toolserver.log
sudo su - fbadmin -c "ssh -l root zu5rd005.fleetboard.dmz 'cd /home/fbadmin/; ls -al'" >> workflow_toolserver.log

echo " ----------svn------------- " >> workflow_toolserver.log
sudo su - fbadmin -c "ssh -l svnadm svn.fleetboard.dmz 'cd /home/svnadm/svnadmin; ls -al'" >> workflow_toolserver.log
