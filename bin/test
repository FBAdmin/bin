#/bin/bash

touch workflow_toolserver.log

date >> workflow_toolserver.log
echo " ----------------------- " >> workflow_toolserver.log

sudo su - fbadmin -c "ssh -l root deploy01.fleetboard.dmz 'cd /home/fbadmin/; ls -al'" >> workflow_toolserver.log

echo " ----------------------- " >> workflow_toolserver.log
sudo su - fbadmin -c "ssh -l root build01.es.fleetboard.dmz 'cd /home/fbadmin/; ls -al'" >> workflow_toolserver.log

echo " ----------------------- " >> workflow_toolserver.log
echo "Finished @" >> workflow_toolserver.log
date >> workflow_toolserver.log

cat workflow_toolserver.log | mail -s "log" fl33tb0ard@gmail.com

rm workflow_toolserver.log

exit 0
